<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageBahati"
    android:background="@color/yellow">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jay Z"
        android:id="@+id/textView8"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dead Presidents"
        android:id="@+id/jaydeath"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="54dp"
        android:checked="false"
        android:textSize="30dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empire State Of Mind"
        android:id="@+id/jayempire"
        android:layout_below="@+id/jaydeath"
        android:layout_alignLeft="@+id/jaydeath"
        android:layout_alignStart="@+id/jaydeath"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:textSize="30dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Cry"
        android:id="@+id/jaycry"
        android:layout_below="@+id/jayempire"
        android:layout_alignLeft="@+id/jayempire"
        android:layout_alignStart="@+id/jayempire"
        android:layout_marginTop="54dp"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prev"
            android:id="@+id/jayprev"
            android:background="#b0000000"
            android:textColor="@color/yellow"
            android:layout_marginLeft="10dp"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main"
            android:id="@+id/jaymain"
            android:background="#b0000000"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:textColor="@color/yellow"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:id="@+id/button5"
            android:background="#b0000000"
            android:textColor="@color/yellow"/>
    </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
