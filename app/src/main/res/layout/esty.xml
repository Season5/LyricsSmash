<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageBahati"
    android:background="@color/yellow">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Esther Wahome"
        android:id="@+id/textView8"
        android:textSize="40dp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kuna Dawa"
        android:id="@+id/estydawa"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="54dp"
        android:checked="false"
        android:textSize="35dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Furahia"
        android:id="@+id/estyfura"
        android:layout_below="@+id/estydawa"
        android:layout_alignLeft="@+id/estydawa"
        android:layout_alignStart="@+id/estydawa"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:textSize="35dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daktari"
        android:id="@+id/estydakta"
        android:layout_below="@+id/estyfura"
        android:layout_alignLeft="@+id/estyfura"
        android:layout_alignStart="@+id/estyfura"
        android:layout_marginTop="54dp"
        android:textSize="35dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="prev"
            android:id="@+id/estyprev"
            android:background="#b0000000"
            android:textColor="@color/yellow"
            android:layout_marginLeft="10dp"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="main"
            android:id="@+id/estymain"
            android:background="#b0000000"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:textColor="@color/yellow"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next"
            android:id="@+id/button5"
            android:background="#b0000000"
            android:textColor="@color/yellow"/>
    </LinearLayout>
</RelativeLayout>
