<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageBahati"
    android:background="@color/yellow">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Kirk Franklin"
        android:id="@+id/textView8"
        android:textSize="40sp"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Smile"
        android:id="@+id/kirksmilo"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_marginTop="54dp"
        android:checked="false"
        android:textSize="30sp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hosanna"
        android:id="@+id/kirkhose"
        android:layout_below="@+id/kirksmilo"
        android:layout_alignLeft="@+id/kirksmilo"
        android:layout_alignStart="@+id/kirksmilo"
        android:layout_marginTop="50dp"
        android:checked="false"
        android:textSize="30sp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:id="@+id/kirktoday"
        android:layout_below="@+id/kirkhose"
        android:layout_alignLeft="@+id/kirkhose"
        android:layout_alignStart="@+id/kirkhose"
        android:layout_marginTop="54dp"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:id="@+id/kirkmain"
            android:background="#b0000000"
            android:textColor="@color/yellow"/>
    </LinearLayout>
            </RelativeLayout>
    </ScrollView>
</RelativeLayout>
